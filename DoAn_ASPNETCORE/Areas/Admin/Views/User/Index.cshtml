        @section Scripts{
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            <script>
                window.onload = function () {
                    $.ajax({
                        url: "../../api/UserApi/GetUserModel",
                        type: "GET",
                        contentType: "Application/json;charset-utf-8",
                    }).done(function (reponse) {
                        console.log(reponse);
                        var newHtml = "";
                        $.each(reponse, function (index, User) {
                            newHtml += '<tr><td>' + User.userName + '</td>';
                            newHtml += '<td>' + User.password + '</td>';
                            newHtml += '<td>' + User.hoTen + '</td>';
                            newHtml += '<td>' + User.diaChi + '</td>';
                            newHtml += '<td>' + User.email + '</td>';
                            newHtml += '<td>' + User.sdt + '</td>';
                            newHtml += '<td>' + User.loai + '</td>';
                            newHtml += '<td>' + User.trangThai + '</td>';

                            newHtml += '<td>' + '<button type="button" id="edit_user" data-iduser="' + User.id + '" class="btn btn-primary" data-toggle="modal" data-target="#EditModal">Edit</button>'
                            //newHtml += '<button type="button" id="btn_delete_user" data-iduser="' + User.id + '" class="btn btn-primary" data-toggle="modal" data-target="#deleteModal">Delete</button>';
                        });
                        $("#dsuser").empty();
                        $("#dsuser").html(newHtml);
                    }).fail(function () {
                        alert('Thất bại !');
                    });

                }
                function addUser() {
                    var insert = {};
                    insert.UserName = $("#username").val();

                    insert.Password = $("#password").val();

                    insert.HoTen = $("#hoten").val();

                    insert.DiaChi = $("#diachi").val();

                    insert.Email = $("#email").val();

                    insert.Sdt = $("#sdt").val();

                    insert.Loai = $("#loai").val();

                    insert.TrangThai = $("#trangthai").val();

                    $.ajax({
                        url: "../../api/UserApi/PostUserModel",
                        type: "POST",
                        contentType: "Application/json;charset-utf-8",
                        data: JSON.stringify(insert),
                        dataType: "json"
                    }).done(function (reponse) {
                        $("#AddModal").modal('hide');
                        $("#successModal").modal('show');

                    }).fail(function () {
                        alert('Thất bại !');
                    });
                }
                function getUser(id) {
                    $.ajax({
                        url: "../../api/UserApi/GetUserModel/" + id,
                        type: "GET",
                        contentType: "Application/json;charset-utf-8",
                        dataType: "json"
                    }).done(function (reponse) {
                        $("#edit_id").val(reponse.id);
                        $("#edit_username").val(reponse.userName);
                        $("#edit_password").val(reponse.password);
                        $("#edit_hoten").val(reponse.hoTen);
                        $("#edit_diachi").val(reponse.diaChi);
                        $("#edit_email").val(reponse.email);
                        $("#edit_sdt").val(reponse.sdt);
                        $("#edit_loai").val(reponse.loai);
                        $("#edit_trangthai").val(reponse.trangThai);
                    }).fail(function () {
                        alert('Thất bại !');
                    });
                }
                function updateUser(id) {
                    var update = {}
                    update.ID = parseInt(id);
                    update.UserName = $("#edit_username").val();

                    update.Password = $("#edit_password").val();

                    update.HoTen = $("#edit_hoten").val();

                    update.DiaChi = $("#edit_diachi").val();

                    update.Email = $("#edit_email").val();

                    update.Sdt = $("#edit_sdt").val();

                    update.Loai = $("#edit_loai").val();

                    update.TrangThai = $("#edit_trangthai").val();
                    $.ajax({
                        url: "../../api/UserApi/PutUserModel/" + id,
                        type: "PUT",
                        contentType: "Application/json;charset-utf-8",
                        data: JSON.stringify(update),
                        dataType: "json"
                    }).done(function (reponse) {
                        $("#EditModal").modal('hide');
                        $("#updateModal").modal('show');

                    }).fail(function () {
                        alert('Thất bại !');
                    });
                }
                function deleteUser(id) {

                    $.ajax({
                        url: "../../api/UserApi/DeleteUserModel/" + id,
                        type: "DELETE",
                        contentType: "Application/json;charset-utf-8",
                        dataType: "json"
                    }).done(function (reponse) {
                        $("#deleteModal").modal('show');

                    }).fail(function () {
                        alert('Thất bại !');
                    });
                }
                $(document).ready(function () {
                    $('button[name=btn_create_user]').click(function (e) {
                        addUser();
                        e.preventDefault();
                    });
                    $('body').on('click', '#edit_user', function () {
                        var id = $(this).data("iduser");
                        getUser(id);
                        e.preventDefault();
                    });
                    $('body').on('click', '#btn_update_user', function () {
                        var id = $("#edit_id").val();
                        updateUser(id);
                        e.preventDefault();
                    });
                    $('body').on('click', '#btn_delete_user', function () {
                        var id = $(this).data("iduser");
                        deleteUser(id);
                        e.preventDefault();
                    });
                    $('button[name=btn_ok]').click(function (e) {
                        location.reload();
                    });
                });

            </script>
        }

