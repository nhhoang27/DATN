
@model DoAn_ASPNETCORE.Areas.Admin.Models.LoaiSanPhamModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section css{ 
    <script>
       
    </script>
}
<div id="successModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
                <div class="icon-box">
                    <i class="material-icons">&#xE876;</i>
                </div>
                <h4 class="modal-title w-100">Thêm Thành Công!</h4>
            </div>
            <div class="modal-footer">
                <button type="button" style="margin-left:90px;" name="btn_ok" class="btn btn-success btn-block" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>
<div id="deleteModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
                <div class="icon-box" style="background:#b22222">
                    <i  class="material-icons">&#xE872;</i>
                </div>
                <h4 class="modal-title w-100">Xóa Thành Công!</h4>
            </div>
            <div class="modal-footer" >
                <button type="button" style="margin-left:90px;background:#b22222" name="btn_ok" class="btn btn-success btn-block" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>
<div id="updateModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
                <div class="icon-box" style="background:#3205cd">
                    <i class="material-icons">&#xE86A;</i>
                </div>
                <h4 class="modal-title w-100">Cập Nhật Thành Công!</h4>
            </div>
            <div class="modal-footer">
                <button type="button" style="margin-left:90px;background:#3205cd" name="btn_ok" class="btn btn-success btn-block" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="AddModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm loại sản phẩm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TenLoai" class="control-label"></label>
                        <input id="tenloai" asp-for="TenLoai" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(model => model.TenLoai)</span>

                    </div>
                    <div class="form-group">
                        <label asp-for="NhaCungCap" class="control-label"></label>
                        <select asp-for="NhaCungCap" id="ncc" class="form-control" asp-items="ViewBag.NhaCungCap"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="TrangThai" class="control-label"></label>
                        <input asp-for="TrangThai" id="trangthai" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(model => model.TrangThai)</span>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" name="btn_create_loaisanpham" class="btn btn-primary">Thêm Mới</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Sửa loại sản phẩm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" id="edit_id" asp-for="ID" />
                    <div class="form-group">
                        <label asp-for="TenLoai" class="control-label"></label>
                        <input asp-for="TenLoai" id="edit_tenloai" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(model => model.TenLoai)</span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NhaCungCap" class="control-label"></label>
                        <select asp-for="NhaCungCap" id="edit_ncc" class="form-control" asp-items="ViewBag.NhaCungCap"></select>
                        <span asp-validation-for="NhaCungCap" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TrangThai" class="control-label"></label>
                        <input asp-for="TrangThai" id="edit_trangthai" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(model => model.TrangThai)</span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" name="btn_update_loaisanpham" class="btn btn-primary">Cập Nhật</button>
            </div>
        </div>
    </div>
</div>
<div class="wrapper">
    @await Html.PartialAsync("/Areas/Admin/Views/Shared/SideBar.cshtml")

    <div class="main-panel">
        <!-- Navbar -->
        @await Html.PartialAsync("/Areas/Admin/Views/Shared/NavBar.cshtml")

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4">
                        <p>
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#AddModal">Thêm</button>
                        </p>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TenLoai)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaNCC)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TrangThai)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="dsloaisp">
                                @*load ds dùng js*@

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

        @section Scripts{
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            <script>
                window.onload = function () {
                    $.ajax({
                        url: "../../api/LoaiSanPhamApi/GetLoaiSanPhamModel",
                        type: "GET",
                        contentType: "Application/json;charset-utf-8",
                    }).done(function (reponse) {
                        console.log(reponse);
                        var newHtml = "";

                        $.each(reponse, function (index, loaiSP) {
                            newHtml += '<tr><td>' + loaiSP.tenLoai + '</td>';
                            newHtml += '<td>' + loaiSP.nhaCungCap + '</td>';
                            newHtml += '<td>' + loaiSP.trangThai + '</td>';
                            newHtml += '<td>' + '<button type="button" id="edit_loaisanpham" data-idloaisp="' + loaiSP.id + '" class="btn btn-primary" data-toggle="modal" data-target="#EditModal">Edit</button>';
                            newHtml += '<button type="button" id="btn_delete_loaisanpham" data-idloaisp="' + loaiSP.id + '" class="btn btn-danger btn_delete_loaisanpham">Delete</button>' + '</td></tr>';
                        });
                        $("#dsloaisp").html(newHtml);
                    }).fail(function () {
                        alert('Thất bại !');
                    });


                }
                function addLoaiSP() {
                    var insert = {};
                    insert.TenLoai = $("#tenloai").val();
                    insert.NhaCungCap = parseInt($("#ncc").val());
                    insert.TrangThai = $("#trangthai").val();
                    $.ajax({
                        url: "../../api/LoaiSanPhamApi/PostLoaiSanPhamModel",
                        type: "POST",
                        contentType: "Application/json;charset-utf-8",
                        data: JSON.stringify(insert),
                        dataType: "json"
                    }).done(function (reponse) {
                        $("#AddModal").modal('hide');
                        $("#successModal").modal('show');

                    }).fail(function () {
                        alert('Thất bại !');
                    });
                }
                function getLoaiSP(id) {
                    $.ajax({
                        url: "../../api/LoaiSanPhamApi/GetLoaiSanPhamModel/" + id,
                        type: "GET",
                        contentType: "Application/json;charset-utf-8",
                        dataType: "json"
                    }).done(function (reponse) {
                        $("#edit_id").val(reponse.id);
                        $("#edit_tenloai").val(reponse.tenLoai);
                        $("#edit_ncc").val(reponse.nhaCungCap);
                        $("#edit_trangthai").val(reponse.trangThai);

                    }).fail(function () {
                        alert('Thất bại !');
                    });
                }
                function updateLoaiSP(id) {
                    var update = {}
                    update.ID = parseInt(id);
                    update.TenLoai = $("#edit_tenloai").val();
                    update.NhaCungCap = parseInt($("#edit_ncc").val());
                    update.TrangThai = $("#edit_trangthai").val();
                    $.ajax({
                        url: "../../api/LoaiSanPhamApi/PutLoaiSanPhamModel/" + id,
                        type: "PUT",
                        contentType: "Application/json;charset-utf-8",
                        data: JSON.stringify(update),
                        dataType: "json"
                    }).done(function (reponse) {
                        $("#EditModal").modal('hide');
                        $("#updateModal").modal('show');

                    }).fail(function () {
                        alert('Thất bại !');
                    });
                }
                function deleteLoaiSP(id) {

                    $.ajax({
                        url: "../../api/LoaiSanPhamApi/DeleteLoaiSanPhamModel/" + id,
                        type: "DELETE",
                        contentType: "Application/json;charset-utf-8",
                        dataType: "json"
                    }).done(function (res) {
                        if (res == true) {
                            $("#deleteModal").modal('show');
                        } else {
                            alert("Xóa loại sản phẩm không thành công");
                        }
                        
                    }).fail(function () {
                        alert('Thất bại !');
                    });
                }

                $(document).ready(function () {
                    $('button[name=btn_create_loaisanpham]').click(function (e) {
                        addLoaiSP();
                        e.preventDefault();
                    });

                    //$('button[name=edit_loaisanpham]').click(function (e) {
                    //    console.log("OK")
                    //var id = $(this).data("idloaisp");
                    //getLoaiSP(id);
                    //e.preventDefault();
                    //});

                    /* [https://api.jquery.com/on/]
                      Liên kết sự kiện bị phá vỡ khi thực hiện ajax cập nhật đoạn html trước khi load page.
                      Vì vậy để load trước dsanh, bắt sự kiện tại đoạn html cập nhật thì nên dùng .on() để liên kết sự kiện*/

                    $('body').on('click', '#edit_loaisanpham', function () {
                        var id = $(this).data("idloaisp");
                        getLoaiSP(id);
                        e.preventDefault();
                    });
                    $('body').on('click', '.btn_delete_loaisanpham', function () {
                        var id = $(this).data("idloaisp");
                        deleteLoaiSP(id);
                        e.preventDefault();
                    });
                    $('button[name=btn_update_loaisanpham]').click(function (e) {
                        var id = $("#edit_id").val();
                        updateLoaiSP(id);
                        e.preventDefault();
                    });

                    //$('button[name=btn_delete_loaisanpham]').click(function (e) {
                    //var id = $(this).data("idloaisp");
                    //deleteLoaiSP(id);
                    //e.preventDefault();
                    //});

                    $('button[name=btn_ok]').click(function (e) {
                        location.reload();
                    });

                });

            </script>
        }

