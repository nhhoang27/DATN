@model DoAn_ASPNETCORE.Areas.Admin.Models.DanhMucModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@await Html.PartialAsync("/Areas/Admin/Views/Shared/SideBar.cshtml")
<div class="main-panel">
    <!-- Navbar -->
    @await Html.PartialAsync("/Areas/Admin/Views/Shared/NavBar.cshtml")
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4">

                    <h4>DanhMucModel</h4>
                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="ID_DanhMuc" />
                                <div class="form-group">
                                    <label asp-for="TenDanhMuc" class="control-label"></label>
                                    <input asp-for="TenDanhMuc" class="form-control" />
                                    <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TrangThai" class="control-label"></label>
                                    <input asp-for="TrangThai" class="form-control" />
                                    <span asp-validation-for="TrangThai" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>

                    @section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }

                </div>
            </div>
        </div>
    </div>
</div>
